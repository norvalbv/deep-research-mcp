{
  "name": "deep-research-mcp",
  "version": "1.0.0",
  "description": "Intelligent multi-source research orchestration MCP server",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "deep-research-mcp": "./src/index.ts"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector npx tsx src/index.ts",
    "prepublishOnly": "npm run build",
    "lint": "biome check --write",
    "lint:fix": "biome check --write",
    "format": "biome format --write"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "research",
    "orchestration",
    "perplexity",
    "arxiv",
    "context7",
    "claude",
    "chatgpt",
    "multi-source",
    "academic-research",
    "web-search"
  ],
  "author": "Benji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/research-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/research-mcp/issues"
  },
  "homepage": "https://github.com/yourusername/research-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "biome": "^0.3.3",
    "eslint": "^9.39.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
